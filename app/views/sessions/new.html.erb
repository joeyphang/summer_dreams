<h1>Please Sign In</h1>

<%- if flash[:error] %>
<%= flash[:error] %>
<% elsif flash[:success] %>
<%= flash[:success] %>
<% end %>

<%= form_for :session, url: sessions_path do |f| %>
	<%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>

    <%= f.label :password %>
    <%= f.password_field :password_digest, class: 'form-control', placeholder: 'Password' %>

    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>

    <%= f.submit 'Log In', class: 'btn btn-primary' %>
<% end %>

New User? <%= link_to 'Register for special promotions', new_user_path %>
