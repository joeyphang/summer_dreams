<div class="container fluid">
	<div class="product_form">
	<h2>Add New Product</h2><br/>


	<br><%= form_with  model: @product do |form| %>
		<%= form.label :title %> :
		<%= form.text_field :title, autocomplete: :off %> <br/>

		<%= form.label :description %> :
		<%= form.text_field :description, autocomplete: :off %> <br/>

		<%= form.label :price %> :
		<%= form.number_field :price %> <br/>

		<%= form.label :Upload_Image %> :
		<%= form.file_field :avatar, multiple:true %> <br/>

		<%= form.submit %>

	<% end %>

	</div>
</div>